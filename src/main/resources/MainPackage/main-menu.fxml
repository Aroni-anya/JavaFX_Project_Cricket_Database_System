<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainPackage.MainMenuController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="600.0" layoutX="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@image1.jpg" />
         </image>
      </ImageView>
      <!-- Main Title -->
      <Label layoutX="131.0" layoutY="51.0" text="Cricket Player Database" textFill="#FFFFFF">
         <font>
            <Font name="Algerian" size="43.0" />
         </font></Label>

      <!-- Search Players Button -->
      <Button layoutX="51.0" layoutY="155.0" mnemonicParsing="false" onAction="#OnSearchPlayerClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #D3D3D3; -fx-border-color: grey; -fx-border-width: 2px; -fx-text-fill: black; -fx-font-family: 'algerian'; -fx-font-size: 18px; -fx-border-radius: 10; -fx-background-radius: 10;" text="Search Players" />

      <!-- Search Clubs Button -->
      <Button layoutX="45.0" layoutY="249.0" mnemonicParsing="false" onAction="#OnSearchClubsClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #D3D3D3; -fx-border-color: grey; -fx-border-width: 2px; -fx-text-fill: black; -fx-font-family: 'algerian'; -fx-font-size: 18px; -fx-background-radius: 10; -fx-border-radius: 10;" text="Search Clubs" />

      <!-- Add Players Button -->
      <Button layoutX="45.0" layoutY="345.0" mnemonicParsing="false" onAction="#OnAddPlayersClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #D3D3D3; -fx-border-color: grey; -fx-border-width: 2px; -fx-text-fill: black; -fx-font-family: 'algerian'; -fx-font-size: 18px; -fx-background-radius: 10; -fx-border-radius: 10;" text="Add Players" />

      <!-- Exit System Button -->
      <Button layoutX="45.0" layoutY="442.0" mnemonicParsing="false" onAction="#OnExitSystemClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #D3D3D3; -fx-border-color: grey; -fx-border-width: 2px; -fx-text-fill: black; -fx-font-family: 'algerian'; -fx-font-size: 18px; -fx-background-radius: 10; -fx-border-radius: 10;" text="Exit" />

      <!-- Owner Login Label -->
      <Label layoutX="331.0" layoutY="522.0" prefHeight="50.0" prefWidth="238.0" style="-fx-background-color: black;" text="Are you an Owner?" textFill="#FFFFFF">
         <font>
            <Font name="Algerian" size="24.0" />
         </font></Label>

      <!-- Login Button -->
      <Button layoutX="587.0" layoutY="522.0" mnemonicParsing="false" onAction="#OnLoginClick" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #D3D3D3; -fx-border-color: grey; -fx-border-width: 2px; -fx-text-fill: black; -fx-font-family: 'algerian'; -fx-font-size: 18px; -fx-background-radius: 10; -fx-border-radius: 10;" text="Log In" />
   </children>
</AnchorPane>
