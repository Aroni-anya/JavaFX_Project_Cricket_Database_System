<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainPackage.SearchNameController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="771.0" layoutX="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@image1.jpg" />
         </image>
      </ImageView>
      <!-- TextField for Name -->
      <TextField fx:id="namefield" layoutX="49.0" layoutY="170.0" prefHeight="50.0" prefWidth="186.0" promptText="Enter The Name" style="-fx-font-family: 'Algerian'; -fx-font-size: 18px; -fx-background-color: #D3D3D3; -fx-text-fill: black; -fx-border-color: grey; -fx-border-width: 2; -fx-border-radius: 10;" />

      <!-- Search Button -->
      <Button layoutX="287.0" layoutY="177.0" mnemonicParsing="false" onAction="#OnSearchClick" style="-fx-border-color: grey; -fx-background-color: #D3D3D3; -fx-border-width: 2; -fx-text-fill: Black; -fx-font-family: 'Algerian'; -fx-font-size: 18px; -fx-border-radius: 10; -fx-background-radius: 10;" text="Search" />

      <!-- Back to Main Menu Button -->
      <Button layoutX="592.0" layoutY="540.0" mnemonicParsing="false" onAction="#OnBackToSearch" style="-fx-border-color: grey; -fx-background-color: #D3D3D3; -fx-border-width: 2; -fx-text-fill: black; -fx-font-family: 'Algerian'; -fx-font-size: 16px; -fx-border-radius: 8; -fx-background-radius: 8;" text="Back to Main Menu" />

      <!-- TextArea for Results -->
      <TextArea fx:id="resultarea" layoutX="23.0" layoutY="259.0" prefHeight="232.0" prefWidth="527.0" style="-fx-font-family: 'algerian'; -fx-font-size: 14px; -fx-background-color: #D3D3D3; -fx-text-fill: black; -fx-border-color: grey; -fx-border-width: 2; -fx-border-radius: 10;" />
      <Label layoutX="341.0" layoutY="38.0" text="Search Player By Name" textFill="#f7f7f7">
         <font>
            <Font name="Algerian" size="34.0" />
         </font>
      </Label>
   </children>
   <effect>
      <Blend opacity="0.92" />
   </effect>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>
