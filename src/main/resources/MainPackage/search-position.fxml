<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainPackage.SearchPositionController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="618.0" layoutX="250.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@image1.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="positionfield" layoutX="100.0" layoutY="180.0" prefHeight="46.0" prefWidth="196.0" promptText="Enter Position">
         <font>
            <Font name="Algerian" size="18.0" />
         </font></TextField>
      <Button layoutX="377.0" layoutY="185.0" mnemonicParsing="false" onAction="#OnPositionSearchClick" style="-fx-background-color: #D3D3D3; -fx-border-color: grey; -fx-border-width: 2; -fx-background-radius: 10; -fx-border-radius: 10; -fx-font-family: algerian; -fx-font-size: 18px;" text="Search" />
      <TextArea fx:id="resultarea" layoutX="56.0" layoutY="265.0" prefHeight="246.0" prefWidth="540.0" style="-fx-font-family: algerian;">
         <font>
            <Font name="Algerian" size="16.0" />
         </font></TextArea>
      <Button layoutX="550.0" layoutY="531.0" mnemonicParsing="false" onAction="#OnBackToSearchClick" style="-fx-background-color: #D3D3D3; -fx-border-color: grey; -fx-background-radius: 10; -fx-border-radius: 10;" text="Go Back To Search">
         <font>
            <Font name="Algerian" size="18.0" />
         </font></Button>
      <Label layoutX="247.0" layoutY="43.0" text="Search Player By Position" textFill="#99c2c7">
         <font>
            <Font name="Algerian" size="37.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
